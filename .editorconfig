root = true

[*]
trim_trailing_whitespace = true
charset                  = utf-8
tab_width                = 4
indent_style             = space

[*.yml]
indent_size              = 2

[*.php]
insert_final_newline     = true

[*.md]
max_line_length          = 80

[COMMIT_EDITMSG]
indent_size              = 4
max_line_length          = 80
